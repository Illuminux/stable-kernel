From 67c40c721a48a7e823f983171edde68c38ee65ba Mon Sep 17 00:00:00 2001
From: Robert Nelson <robertcnelson@gmail.com>
Date: Tue, 25 May 2010 14:52:28 -0500
Subject: [PATCH] OMAP3 SGX setup staging makefile

---
 drivers/staging/Kconfig           |    2 ++
 drivers/staging/Makefile          |    1 +
 drivers/staging/omap3-sgx/Kconfig |    5 +++++
 3 files changed, 8 insertions(+), 0 deletions(-)
 create mode 100644 drivers/staging/omap3-sgx/Kconfig

diff --git a/drivers/staging/Kconfig b/drivers/staging/Kconfig
index b5c3b30..fec353a 100644
--- a/drivers/staging/Kconfig
+++ b/drivers/staging/Kconfig
@@ -141,5 +141,7 @@ source "drivers/staging/ti-st/Kconfig"
 
 source "drivers/staging/adis16255/Kconfig"
 
+source "drivers/staging/omap3-sgx/Kconfig"
+
 endif # !STAGING_EXCLUDE_BUILD
 endif # STAGING
diff --git a/drivers/staging/Makefile b/drivers/staging/Makefile
index e330dd5..b23dbc7 100644
--- a/drivers/staging/Makefile
+++ b/drivers/staging/Makefile
@@ -48,6 +48,7 @@ obj-$(CONFIG_FB_SM7XX)		+= sm7xx/
 obj-$(CONFIG_DT3155)		+= dt3155/
 obj-$(CONFIG_VIDEO_DT3155)	+= dt3155v4l/
 obj-$(CONFIG_CRYSTALHD)		+= crystalhd/
+obj-$(CONFIG_OMAP3_SGX) 	+= omap3-sgx/
 obj-$(CONFIG_CXT1E1)		+= cxt1e1/
 obj-$(CONFIG_TI_ST)		+= ti-st/
 obj-$(CONFIG_ADIS16255)		+= adis16255/
diff --git a/drivers/staging/omap3-sgx/Kconfig b/drivers/staging/omap3-sgx/Kconfig
new file mode 100644
index 0000000..6712c5c
--- /dev/null
+++ b/drivers/staging/omap3-sgx/Kconfig
@@ -0,0 +1,5 @@
+config OMAP3_SGX
+	bool "OMAP3 SGX support (TI: 3.01.00.02)"
+	depends on OMAP2_DSS && m
+	help
+	  This is TI's OMAP3 SGX Kernel Modules 3.01.00.02
