 static int __init omap3_beagle_i2c_init(void)
 {
     omap_register_i2c_bus(1, 2600, beagle_i2c1_boardinfo,
             ARRAY_SIZE(beagle_i2c1_boardinfo));
+	omap_register_i2c_bus(2, 400, NULL, 0);
     /* Bus 3 is attached to the DVI port where devices like the pico DLP
      * projector don't work reliably with 400kHz */
     omap_register_i2c_bus(3, 100, NULL, 0);
     return 0;
 }
 
+static int __init omap3_beagle_expansion_init(void)
+{
+	struct i2c_adapter *i2c_adap;
+
+	int err;
+	i2c_adap = i2c_get_adapter(2);
+	if (!i2c_adap)
+		printk(KERN_ERR "Couldnot get i2c2 bus\n");
+	//memset(&beagle_i2c2_boardinfo, 0, sizeof(struct i2c_board_info));
+	err = i2c_new_probed_device(i2c_adap, &beagle_i2c2_boardinfo, expansion_addr);
+	if (!err)
+		printk(KERN_DEBUG "No Expansion Board Present\n");
+
+	return 0;
+}
 
 
